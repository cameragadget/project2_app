<!DOCTYPE html>
<html>
<head>
  <title>Project2App</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="row">
<div class="col-md-1 col-md-offset-1"><%= link_to "Home", root_path %></div>
<div class="col-md-1"><%= link_to "Classifieds", classifieds_path %></div>
<div class="col-md-1"><%= link_to "Rumors", rumors_path %></div>
<div class="col-md-4 col-md-offset-4" id="login">
  <% if current_user %>
    Welcome, <%= current_user.first_name %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to 'Logout', session_path('dummy'), method: :delete %>
  <% else %>
    <%= link_to 'Login', login_path %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to "Sign Up", new_user_path %>
  <% end %>
</div>
</header>

<%= yield %>

</body>
</html>
