<div class="col-sm-8 col-sm-offset-2" id="classified_index">
  <h1 class="group_title">Rumors!</h1>
  <h3 class="group_title"><%= link_to "Start a new rumor!", new_rumor_path, :class => "link" %></h3>
  <% @rumors.each do |rumor| %>
    <div id="c_index_each">
      <p class="lead"><%= rumor.title %></p>
      <p><%= rumor.body_text %></p>
      <p><small>Spread by <%= rumor.user.initials %> on <%= rumor.created_at.strftime("%m-%d-%Y") %></small></p>
      <% if current_user == nil %>
        <p></p>
      <% elsif rumor.user_id == current_user.id || is_admin %>
       <p><%= link_to "Edit", edit_rumor_path(rumor), :class => "link" %> <%= link_to 'Delete', rumor, method: :delete, data: { confirm: 'Are you sure?' }, :class => "link" %></p>
      <% end %>
    </div>
  <% end %>
</div>


