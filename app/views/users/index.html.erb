<h1>Index list of all users</h1>

<ul class="user">
  <% @users.each do |user| %>
    <li>
        <p><%= user.email %></p>
    </li>
    <% if user == current_user || is_admin %>
      <p><%= link_to "Show", user %> <%= link_to "Edit", edit_user_path(user) %> <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
  <% end %>
</ul>
