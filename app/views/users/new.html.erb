<div class="container">
<div id="edit">
<h1>Sign Up</h1>
<%= bootstrap_form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Hmmmm, something's wrong with your entry</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.text_field :initials %>
  </div>
  <div class="field">
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.date_select :born_on, order: [:month, :day, :year], start_year: 1910 %>
  </div>
  <div class="field">
    <%= f.text_field :machines_owned %>
  </div>
  <div class="field">
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.text_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>
</div>
</div>
